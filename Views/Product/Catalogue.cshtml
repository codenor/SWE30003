@model ElectronicsStoreAss3.Models.ProductSearchViewModel
@{
    ViewData["Title"] = "Product Catalogue";
}

<div class="container py-5">
    <div class="row mb-4">
        <div class="col-12">
            <h1><i class="bi bi-store"></i> Product Catalogue</h1>
            <p class="lead">Discover our latest electronics and gadgets</p>
        </div>
    </div>

    <!-- Search and Filter Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <form asp-action="Catalogue" method="get">
                        <div class="row g-3">
                            <!-- Search Term -->
                            <div class="col-md-3">
                                <label for="SearchTerm" class="form-label">Search Products</label>
                                <input asp-for="SearchTerm" class="form-control"
                                       placeholder="Search by name, description, or SKU...">
                            </div>

                            <!-- Category Filter -->
                            <div class="col-md-2">
                                <label for="Category" class="form-label">Category</label>
                                <select asp-for="Category" class="form-select">
                                    <option value="">All Categories</option>
                                    @foreach (var category in Model.Categories)
                                    {
                                        <option value="@category">@category</option>
                                    }
                                </select>
                            </div>

                            <!-- Brand Filter -->
                            <div class="col-md-2">
                                <label for="Brand" class="form-label">Brand</label>
                                <select asp-for="Brand" class="form-select">
                                    <option value="">All Brands</option>
                                    @foreach (var brand in Model.Brands)
                                    {
                                        <option value="@brand">@brand</option>
                                    }
                                </select>
                            </div>

                            <!-- Price Range -->
                            <div class="col-md-2">
                                <label for="MinPrice" class="form-label">Min Price</label>
                                <input asp-for="MinPrice" type="number" class="form-control" placeholder="$0"
                                       step="0.01">
                            </div>
                            <div class="col-md-2">
                                <label for="MaxPrice" class="form-label">Max Price</label>
                                <input asp-for="MaxPrice" type="number" class="form-control" placeholder="$999999"
                                       step="0.01">
                            </div>

                            <!-- Search Button -->
                            <div class="col-md-1 d-flex align-items-end">
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-search"></i> Search
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Sort and Results Info -->
    <div class="row mb-3">
        <div class="col-md-6">
            <p class="mb-0">
                Showing @((Model.Page - 1) * Model.PageSize + 1) - @Math.Min(Model.Page * Model.PageSize, Model.TotalProducts)
                of @Model.TotalProducts products
            </p>
        </div>
        <div class="col-md-6">
            <div class="d-flex justify-content-end">
                <div class="me-2">
                    <select asp-for="SortBy" class="form-select form-select-sm" onchange="this.form.submit()">
                        <option value="Name">Sort by Name</option>
                        <option value="Price">Sort by Price</option>
                        <option value="Category">Sort by Category</option>
                    </select>
                </div>
                <div>
                    <select asp-for="SortOrder" class="form-select form-select-sm" onchange="this.form.submit()">
                        <option value="ASC">Ascending</option>
                        <option value="DESC">Descending</option>
                    </select>
                </div>
            </div>
        </div>
    </div>

    <!-- Products Grid -->
    <div class="row">
        @if (Model.Products.Any())
        {
            @foreach (var product in Model.Products)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        @if (!string.IsNullOrEmpty(product.ImagePath))
                        {
                            <img src="@product.ImagePath" class="card-img-top" alt="@product.Name"
                                 style="height: 200px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="card-img-top bg-light d-flex align-items-center justify-content-center"
                                 style="height: 200px;">
                                <i class="bi bi-image text-muted" style="font-size: 2rem;"></i>
                            </div>
                        }

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text">@product.Description</p>
                            <p class="card-text">
                                <small class="text-muted">Category: @product.Category</small>
                                @if (!string.IsNullOrEmpty(product.Brand))
                                {
                                    <br/>
                                    <small class="text-muted">Brand: @product.Brand</small>
                                }
                            </p>

                            <div class="mt-auto">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <h4 class="text-primary mb-0">$@product.Price.ToString("F2")</h4>
                                    <small class="text-muted">Stock: @product.StockLevel</small>
                                </div>

                                @if (product.IsInStock)
                                {
                                    <!-- Add to Cart Form -->
                                    <form method="post" asp-controller="ShoppingCart" asp-action="AddToCart">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="productId" value="@product.ProductId"/>
                                        <input type="hidden" name="returnUrl"
                                               value="@Context.Request.Path@Context.Request.QueryString"/>

                                        <div class="input-group mb-2">
                                            <span class="input-group-text">Qty:</span>
                                            <input type="number" name="quantity" value="1" min="1"
                                                   max="@product.StockLevel"
                                                   class="form-control" style="max-width: 70px;"/>
                                            <button type="submit" class="btn btn-primary">
                                                <i class="bi bi-cart-plus"></i> Add to Cart
                                            </button>
                                        </div>
                                    </form>
                                }
                                else
                                {
                                    <button class="btn btn-secondary w-100" disabled>
                                        <i class="bi bi-x-circle"></i> Out of Stock
                                    </button>
                                }

                                <a href="@Url.Action("Details", "Product", new { id = product.ProductId })"
                                   class="btn btn-outline-secondary w-100 mt-1">
                                    <i class="bi bi-eye"></i> View Details
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="text-center py-5">
                    <i class="bi bi-search fa-5x text-muted mb-3"></i>
                    <h4>No products found</h4>
                    <p class="text-muted">Try adjusting your search criteria or browse all categories.</p>
                    <a asp-action="Catalogue" class="btn btn-primary">View All Products</a>
                </div>
            </div>
        }
    </div>

    <!-- Pagination -->
    @if (Model.TotalPages > 1)
    {
        <div class="row">
            <div class="col-12">
                <nav aria-label="Products pagination">
                    <ul class="pagination justify-content-center">
                        @if (Model.Page > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-action="Catalogue"
                                   asp-route-page="@(Model.Page - 1)"
                                   asp-route-searchTerm="@Model.SearchTerm" asp-route-category="@Model.Category"
                                   asp-route-brand="@Model.Brand" asp-route-minPrice="@Model.MinPrice"
                                   asp-route-maxPrice="@Model.MaxPrice" asp-route-sortBy="@Model.SortBy"
                                   asp-route-sortOrder="@Model.SortOrder">Previous</a>
                            </li>
                        }

                        @for (int i = Math.Max(1, Model.Page - 2); i <= Math.Min(Model.TotalPages, Model.Page + 2); i++)
                        {
                            <li class="page-item @(i == Model.Page ? "active" : "")">
                                <a class="page-link" asp-action="Catalogue"
                                   asp-route-page="@i"
                                   asp-route-searchTerm="@Model.SearchTerm" asp-route-category="@Model.Category"
                                   asp-route-brand="@Model.Brand" asp-route-minPrice="@Model.MinPrice"
                                   asp-route-maxPrice="@Model.MaxPrice" asp-route-sortBy="@Model.SortBy"
                                   asp-route-sortOrder="@Model.SortOrder">@i</a>
                            </li>
                        }

                        @if (Model.Page < Model.TotalPages)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-action="Catalogue"
                                   asp-route-page="@(Model.Page + 1)"
                                   asp-route-searchTerm="@Model.SearchTerm" asp-route-category="@Model.Category"
                                   asp-route-brand="@Model.Brand" asp-route-minPrice="@Model.MinPrice"
                                   asp-route-maxPrice="@Model.MaxPrice" asp-route-sortBy="@Model.SortBy"
                                   asp-route-sortOrder="@Model.SortOrder">Next</a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        </div>
    }
</div>

<!-- Admin Actions (if logged in as admin) -->
@if (User.IsInRole("Admin") || User.IsInRole("Owner"))
{
    <div class="position-fixed bottom-0 end-0 p-3">
        <a asp-action="Create" class="btn btn-success btn-lg rounded-circle" title="Add New Product">
            <i class="bi bi-plus"></i>
        </a>
    </div>
}

<style>
    .product-card {
        transition: transform 0.2s ease-in-out;
    }

    .product-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }
</style>

