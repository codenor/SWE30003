@model ElectronicsStoreAss3.Models.Product.ProductViewModel
@{
    ViewData["Title"] = "Create Product";
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-action="Catalogue">Catalogue</a></li>
            <li class="breadcrumb-item active">Create Product</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0"><i class="fas fa-plus-circle"></i> Create New Product</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <div class="row">
                            <!-- Basic Information -->
                            <div class="col-md-6">
                                <h5 class="text-primary mb-3">Basic Information</h5>
                                
                                <div class="mb-3">
                                    <label asp-for="Name" class="form-label">Product Name *</label>
                                    <input asp-for="Name" class="form-control" placeholder="Enter product name">
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="SKU" class="form-label">SKU (Stock Keeping Unit) *</label>
                                    <input asp-for="SKU" class="form-control" placeholder="e.g., APPLE-IP15P-128">
                                    <span asp-validation-for="SKU" class="text-danger"></span>
                                    <div class="form-text">Must be unique across all products</div>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Description" class="form-label">Description *</label>
                                    <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter detailed product description"></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Specifications" class="form-label">Specifications</label>
                                    <textarea asp-for="Specifications" class="form-control" rows="6" placeholder="Enter technical specifications (optional)"></textarea>
                                    <span asp-validation-for="Specifications" class="text-danger"></span>
                                    <div class="form-text">Enter each specification on a new line</div>
                                </div>
                            </div>

                            <!-- Categories and Pricing -->
                            <div class="col-md-6">
                                <h5 class="text-primary mb-3">Categories & Pricing</h5>
                                
                                <div class="mb-3">
                                    <label asp-for="Category" class="form-label">Category *</label>
                                    <select asp-for="Category" class="form-select">
                                        <option value="">Select Category</option>
                                        <option value="Smartphones">Smartphones</option>
                                        <option value="Laptops">Laptops</option>
                                        <option value="Tablets">Tablets</option>
                                        <option value="Audio">Audio</option>
                                        <option value="Accessories">Accessories</option>
                                        <option value="Gaming">Gaming</option>
                                        <option value="Smart Home">Smart Home</option>
                                        <option value="Cameras">Cameras</option>
                                    </select>
                                    <span asp-validation-for="Category" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Brand" class="form-label">Brand</label>
                                    <input asp-for="Brand" class="form-control" placeholder="e.g., Apple, Samsung, Dell" list="brandSuggestions">
                                    <datalist id="brandSuggestions">
                                        <option value="Apple"/>
                                        <option value="Samsung"/>
                                        <option value="Dell"/>
                                        <option value="Sony"/>
                                        <option value="Microsoft"/>
                                        <option value="Google"/>
                                        <option value="HP"/>
                                        <option value="Lenovo"/>
                                        <option value="Asus"/>
                                        <option value="LG"/>
                                    </datalist>
                                    <span asp-validation-for="Brand" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Price" class="form-label">Price (AUD) *</label>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input asp-for="Price" type="number" step="0.01" min="0" class="form-control" placeholder="0.00">
                                    </div>
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="ImagePath" class="form-label">Image URL</label>
                                    <input asp-for="ImagePath" type="url" class="form-control" placeholder="https://example.com/image.jpg">
                                    <span asp-validation-for="ImagePath" class="text-danger"></span>
                                    <div class="form-text">Enter a direct URL to the product image</div>
                                </div>

                                <!-- Inventory Settings -->
                                <h6 class="text-secondary mt-4 mb-3">Inventory Settings</h6>
                                
                                <div class="mb-3">
                                    <label asp-for="StockLevel" class="form-label">Initial Stock Level</label>
                                    <input asp-for="StockLevel" type="number" min="0" class="form-control" placeholder="0">
                                    <span asp-validation-for="StockLevel" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="LowStockThreshold" class="form-label">Low Stock Alert Threshold</label>
                                    <input asp-for="LowStockThreshold" type="number" min="0" class="form-control" value="10">
                                    <span asp-validation-for="LowStockThreshold" class="text-danger"></span>
                                    <div class="form-text">Alert when stock falls below this number</div>
                                </div>

                                <div class="mb-3">
                                    <div class="form-check">
                                        <input asp-for="IsActive" class="form-check-input" type="checkbox" checked>
                                        <label asp-for="IsActive" class="form-check-label">
                                            Product is active and visible to customers
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="row mt-4">
                            <div class="col-12">
                                <hr>
                                <div class="d-flex gap-3">
                                    <button type="submit" class="btn btn-primary btn-lg">
                                        <i class="fas fa-save"></i> Create Product
                                    </button>
                                    <a asp-action="Catalogue" class="btn btn-secondary btn-lg">
                                        <i class="fas fa-arrow-left"></i> Back to Catalogue
                                    </a>
                                    <button type="button" class="btn btn-outline-info btn-lg" onclick="previewProduct()">
                                        <i class="fas fa-eye"></i> Preview
                                    </button>
                                    <button type="reset" class="btn btn-outline-warning btn-lg">
                                        <i class="fas fa-undo"></i> Reset Form
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Preview Modal -->
<div class="modal fade" id="previewModal" tabindex="-1" aria-labelledby="previewModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="previewModalLabel">Product Preview</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <div id="preview-image" class="bg-light rounded d-flex align-items-center justify-content-center" style="height: 250px;">
                            <i class="fas fa-image fa-3x text-muted"></i>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <h4 id="preview-name">Product Name</h4>
                        <p id="preview-description" class="text-muted">Product description will appear here</p>
                        <div class="mb-2">
                            <span id="preview-category" class="badge bg-secondary">Category</span>
                            <span id="preview-brand" class="badge bg-info">Brand</span>
                        </div>
                        <h3 id="preview-price" class="text-primary">$0.00</h3>
                        <p><strong>SKU:</strong> <span id="preview-sku">SKU</span></p>
                        <p><strong>Stock:</strong> <span id="preview-stock">0</span> units</p>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-12">
                        <h6>Specifications:</h6>
                        <pre id="preview-specs" class="bg-light p-3 rounded">No specifications provided</pre>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close Preview</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
function previewProduct() {
    // Get form values
    const name = document.getElementById('Name').value || 'Product Name';
    const description = document.getElementById('Description').value || 'Product description will appear here';
    const category = document.getElementById('Category').value || 'Category';
    const brand = document.getElementById('Brand').value || 'Brand';
    const price = parseFloat(document.getElementById('Price').value) || 0;
    const sku = document.getElementById('SKU').value || 'SKU';
    const stock = parseInt(document.getElementById('StockLevel').value) || 0;
    const imageUrl = document.getElementById('ImagePath').value;
    const specs = document.getElementById('Specifications').value || 'No specifications provided';

    // Update preview
    document.getElementById('preview-name').textContent = name;
    document.getElementById('preview-description').textContent = description;
    document.getElementById('preview-category').textContent = category;
    document.getElementById('preview-brand').textContent = brand;
    document.getElementById('preview-price').textContent = '$' + price.toFixed(2);
    document.getElementById('preview-sku').textContent = sku;
    document.getElementById('preview-stock').textContent = stock;
    document.getElementById('preview-specs').textContent = specs;

    // Update image
    const previewImageDiv = document.getElementById('preview-image');
    if (imageUrl) {
        previewImageDiv.innerHTML = `<img src="${imageUrl}" class="img-fluid rounded" alt="${name}" style="max-height: 250px;">`;
    } else {
        previewImageDiv.innerHTML = '<i class="fas fa-image fa-3x text-muted"></i>';
    }

    // Show modal
    const modal = new bootstrap.Modal(document.getElementById('previewModal'));
    modal.show();
}

// Real-time SKU validation
document.getElementById('SKU').addEventListener('blur', function() {
    const sku = this.value;
    if (sku) {
        // In a real application, you'd make an AJAX call to check SKU uniqueness
        // For now, we'll just show a simple validation message
        console.log('Checking SKU uniqueness for:', sku);
    }
});

// Auto-generate SKU suggestion based on brand, category, and name
function generateSKUHelper() {
    const brand = document.getElementById('Brand').value;
    const category = document.getElementById('Category').value;
    const name = document.getElementById('Name').value;
    
    if (brand && name) {
        const brandCode = brand.substring(0, 3).toUpperCase();
        const nameCode = name.substring(0, 3).toUpperCase().replace(/\s/g, '');
        const suggestion = `${brandCode}-${nameCode}-001`;
        
        // You could set this as placeholder or show as suggestion
        console.log('SKU Suggestion:', suggestion);
    }
}

document.getElementById('Brand').addEventListener('change', generateSKUHelper);
document.getElementById('Name').addEventListener('blur', generateSKUHelper);
</script>

<partial name="_ValidationScriptsPartial" />
}

<style>
.card {
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

.form-label {
    font-weight: 500;
}

.btn-lg {
    padding: 0.75rem 1.5rem;
}

.preview-section {
    background-color: #f8f9fa;
    border-radius: 8px;
    padding: 1rem;
}

.modal-body pre {
    font-size: 0.9rem;
    white-space: pre-wrap;
    word-wrap: break-word;
}
</style>