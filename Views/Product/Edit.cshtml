@model ElectronicsStoreAss3.Models.Product.ProductViewModel
@{
    ViewData["Title"] = "Edit Product - AWE Electronics";
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-action="Catalogue">Catalogue</a></li>
            <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@Model.ProductId">@Model.Name</a></li>
            <li class="breadcrumb-item active">Edit</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-header bg-warning text-dark">
                    <h2 class="mb-0"><i class="fas fa-edit"></i> Edit Product: @Model.Name</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input asp-for="ProductId" type="hidden" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <div class="row">
                            <!-- Basic Information -->
                            <div class="col-md-6">
                                <h5 class="text-primary mb-3">Basic Information</h5>
                                
                                <div class="mb-3">
                                    <label asp-for="Name" class="form-label">Product Name *</label>
                                    <input asp-for="Name" class="form-control">
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="SKU" class="form-label">SKU (Stock Keeping Unit) *</label>
                                    <input asp-for="SKU" class="form-control">
                                    <span asp-validation-for="SKU" class="text-danger"></span>
                                    <div class="form-text">Must be unique across all products</div>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Description" class="form-label">Description *</label>
                                    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Specifications" class="form-label">Specifications</label>
                                    <textarea asp-for="Specifications" class="form-control" rows="6"></textarea>
                                    <span asp-validation-for="Specifications" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Categories and Pricing -->
                            <div class="col-md-6">
                                <h5 class="text-primary mb-3">Categories & Pricing</h5>
                                
                                <div class="mb-3">
                                    <label asp-for="Category" class="form-label">Category *</label>
                                    <select asp-for="Category" class="form-select">
                                        <option value="">Select Category</option>
                                        <option value="Smartphones">Smartphones</option>
                                        <option value="Laptops">Laptops</option>
                                        <option value="Tablets">Tablets</option>
                                        <option value="Audio">Audio</option>
                                        <option value="Accessories">Accessories</option>
                                        <option value="Gaming">Gaming</option>
                                        <option value="Smart Home">Smart Home</option>
                                        <option value="Cameras">Cameras</option>
                                    </select>
                                    <span asp-validation-for="Category" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Brand" class="form-label">Brand</label>
                                    <input asp-for="Brand" class="form-control">
                                    <span asp-validation-for="Brand" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Price" class="form-label">Price (AUD) *</label>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input asp-for="Price" type="number" step="0.01" min="0" class="form-control">
                                    </div>
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="ImagePath" class="form-label">Image URL</label>
                                    <input asp-for="ImagePath" type="url" class="form-control">
                                    <span asp-validation-for="ImagePath" class="text-danger"></span>
                                </div>

                                <!-- Inventory Settings -->
                                <h6 class="text-secondary mt-4 mb-3">Inventory Settings</h6>
                                
                                <div class="mb-3">
                                    <label asp-for="StockLevel" class="form-label">Current Stock Level</label>
                                    <input asp-for="StockLevel" type="number" min="0" class="form-control">
                                    <span asp-validation-for="StockLevel" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="LowStockThreshold" class="form-label">Low Stock Alert Threshold</label>
                                    <input asp-for="LowStockThreshold" type="number" min="0" class="form-control">
                                    <span asp-validation-for="LowStockThreshold" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <div class="form-check">
                                        <input asp-for="IsActive" class="form-check-input" type="checkbox">
                                        <label asp-for="IsActive" class="form-check-label">
                                            Product is active and visible to customers
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="row mt-4">
                            <div class="col-12">
                                <hr>
                                <div class="d-flex gap-3">
                                    <button type="submit" class="btn btn-warning btn-lg">
                                        <i class="fas fa-save"></i> Update Product
                                    </button>
                                    <a asp-action="Details" asp-route-id="@Model.ProductId" class="btn btn-secondary btn-lg">
                                        <i class="fas fa-arrow-left"></i> Back to Product
                                    </a>
                                    <a asp-action="Catalogue" class="btn btn-outline-secondary btn-lg">
                                        <i class="fas fa-th-large"></i> Back to Catalogue
                                    </a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

