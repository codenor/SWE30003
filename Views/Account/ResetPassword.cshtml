@model ResetPasswordViewModel

@{
    ViewData["Title"] = "Reset Password";
}

<div class="container mt-5" style="max-width: 420px;">
    <h2 class="text-center mb-4">Set a New Password</h2>

    <form asp-action="ResetPassword" method="post">
        <input type="hidden" asp-for="Email" />

        <div class="form-group mb-3">
            <input asp-for="NewPassword" type="password" class="form-control form-control-lg" placeholder="New Password" />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <input asp-for="ConfirmPassword" type="password" class="form-control form-control-lg" placeholder="Confirm Password" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-dark btn-lg w-100">Reset Password</button>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
