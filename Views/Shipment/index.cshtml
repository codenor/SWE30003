@model IEnumerable<ElectronicsStoreAss3.Models.Shipment>

@{
    ViewData["Title"] = "Shipments";
}

<div class="container mt-5">
    <h2>Shipments</h2>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Status</th>
                <th>Estimated Delivery</th>
                <th>Delivered</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var s in Model)
            {
                <tr>
                    <td>@s.OrderId</td>
                    <td>@s.Status</td>
                    <td>@s.EstimatedDeliveryDate.ToShortDateString()</td>
                    <td>@(s.DeliveredDate?.ToShortDateString() ?? "Pending")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@s.Id" class="btn btn-sm btn-dark">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
