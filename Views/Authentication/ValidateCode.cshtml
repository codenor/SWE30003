@model ValidateCodeViewModel

@{
    ViewData["Title"] = "Enter Reset Code";
}

<div class="container mt-5" style="max-width: 420px;">
    <h2 class="text-center mb-4">Enter Verification Code</h2>

    <p class="text-muted text-center mb-4">
        Weâ€™ve sent a 6-digit code to your email. Enter it below to reset your password.
    </p>

    <form asp-action="ValidateCode" method="post">
        <input type="hidden" asp-for="Email" />

        <div class="form-group mb-3">
            <input asp-for="Code" class="form-control form-control-lg" placeholder="6-digit code" />
            <span asp-validation-for="Code" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-dark btn-lg w-100">Continue</button>
    </form>

    <div class="text-center mt-3">
        <a asp-action="ForgotPassword" class="small text-decoration-none">Resend code</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
