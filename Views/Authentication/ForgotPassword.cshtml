@model ElectronicsStoreAss3.Models.Authentication.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Forgot Password";
}

<div class="container mt-5" style="max-width: 420px;">
    <h2 class="text-center mb-4">Forgot your password?</h2>

    <p class="text-muted text-center mb-4">
        Enter your email address below and we'll send you instructions to reset your password.
    </p>

    <form asp-action="ForgotPassword" method="post">
        <div class="form-group mb-3">
            <input asp-for="Email" type="email" class="form-control form-control-lg" placeholder="Email address"/>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-dark btn-lg w-100">Send Reset Link</button>
    </form>

    <div class="text-center mt-4">
        <a asp-controller="Authentication" asp-action="Login" class="small text-decoration-none">Back to login</a>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
