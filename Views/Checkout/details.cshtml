@model ElectronicsStoreAss3.Models.CheckoutViewModel

@{
    ViewData["Title"] = "Checkout";
    bool isLoggedIn = !string.IsNullOrEmpty(Model.Email);
}

<div class="container">
    <h2>Checkout</h2>

    <div class="row">
        <div class="col-md-6">
            @if (isLoggedIn)
            {
                <div class="card mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <span>Shipping Information</span>
                        <a href="/Account" class="btn btn-sm btn-outline-secondary">Edit</a>
                    </div>
                    <div class="card-body">
                        <p><strong>Name:</strong> @Model.FirstName @Model.LastName</p>
                        <p><strong>Email:</strong> @Model.Email</p>
                        <p><strong>Mobile:</strong> @Model.Mobile</p>

                        <form asp-action="ProcessPayment" method="post">
                            <input type="hidden" asp-for="FirstName" />
                            <input type="hidden" asp-for="LastName" />
                            <input type="hidden" asp-for="Email" />
                            <input type="hidden" asp-for="Mobile" />

                            @if (string.IsNullOrWhiteSpace(Model.Address))
                            {
                                <div class="mb-3">
                                    <label asp-for="Address" class="form-label">Shipping Address</label>
                                    <textarea asp-for="Address" class="form-control" rows="3"></textarea>
                                    <span asp-validation-for="Address" class="text-danger"></span>
                                </div>
                            }
                            else
                            {
                                <p><strong>Address:</strong> @Model.Address</p>
                                <input type="hidden" asp-for="Address" />
                            }

                            <button type="submit" class="btn btn-primary w-100 mt-3">Confirm and Pay</button>
                        </form>
                    </div>
                </div>
            }
            else
            {
                <div class="card mb-4">
                    <div class="card-header">Shipping Information</div>
                    <div class="card-body">
                        <form asp-action="ProcessPayment" method="post">
                            <div class="mb-3">
                                <label asp-for="FirstName" class="form-label"></label>
                                <input asp-for="FirstName" class="form-control" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="LastName" class="form-label"></label>
                                <input asp-for="LastName" class="form-control" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Email" class="form-label"></label>
                                <input asp-for="Email" class="form-control" />
                            </div>
                            <div class="mb-3">
                                <label asp-for="Mobile" class="form-label"></label>
                                <input asp-for="Mobile" class="form-control" />
                                <span asp-validation-for="Mobile" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Address" class="form-label"></label>
                                <textarea asp-for="Address" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-primary w-100">Confirm and Pay</button>
                        </form>
                    </div>
                </div>
            }
        </div>
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">Order Summary</div>
                <div class="card-body">
                    <ul class="list-group mb-3">
                        @foreach (var item in Model.Cart.CartItems)
                        {
                            <li class="list-group-item d-flex justify-content-between lh-sm">
                                <div>
                                    <h6 class="my-0">@item.ProductName (x @item.Quantity)</h6>
                                    <small class="text-muted">SKU: @item.ProductSKU</small>
                                </div>
                                <span class="text-muted">$@(item.UnitPrice * item.Quantity)</span>
                            </li>
                        }
                        <li class="list-group-item d-flex justify-content-between">
                            <strong>Total</strong>
                            <strong>$@Model.Cart.TotalAmount.ToString("F2")</strong>
                        </li>
                    </ul>
                    <a href="/ShoppingCart" class="btn btn-link w-100 text-center">Back to Cart</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
