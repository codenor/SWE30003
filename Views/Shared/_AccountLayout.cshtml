@{
    Layout = "_Layout";
    var action = ViewContext.RouteData.Values["action"]?.ToString() ?? "";
}
<link rel="stylesheet" href="~/css/_AccountLayout.css" />

<div class="d-flex">
    <!-- Sidebar -->
    <div class="account-sidebar d-flex flex-column">
        <div class="account-nav">
            <a asp-action="Index" class="@(action == "Index" ? "active" : "")">Profile Info</a>
            <a asp-action="ChangePassword" class="@(action == "ChangePassword" ? "active" : "")">Change Password</a>
            <a asp-action="Orders" class="@(action == "Orders" ? "active" : "")">Order History</a>
        </div>

        <div class="mt-auto pt-3 border-top px-3">
            <form asp-action="Logout" asp-controller="Account" method="post" class="w-100">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-dark btn-lg w-100">Logout</button>
            </form>
        </div>
    </div>

    <!-- Main content -->
    <div class="account-content">
        @RenderBody()
    </div>
</div>

