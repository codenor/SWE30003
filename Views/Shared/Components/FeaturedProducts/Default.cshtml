@model IEnumerable<ElectronicsStoreAss3.Models.Product>

@foreach (var product in Model)
{
    <div class="col-6 col-md-3">
        <div class="card h-100 product-card border-0 shadow-sm rounded-2">
            <div class="position-relative">
                <a href="@Url.Action("Details", "Product", new { id = product.ProductId })">
                    <img src="@(string.IsNullOrEmpty(product.ImagePath) ? "/images/product-placeholder.jpg" : product.ImagePath)" 
                         class="card-img-top product-img" alt="@product.Name">
                </a>
                <div class="product-badges">
                    <span class="badge bg-primary">Featured</span>
                </div>
            </div>
            <div class="card-body p-3">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <span class="text-muted small">@product.Category</span>
                    <span class="text-muted small">@product.Brand</span>
                </div>
                <h5 class="card-title product-title mb-2">
                    <a href="@Url.Action("Details", "Product", new { id = product.ProductId })" class="text-decoration-none text-dark">
                        @product.Name
                    </a>
                </h5>
                <div class="d-flex justify-content-between align-items-center">
                    <span class="product-price fw-bold">$@product.Price.ToString("F2")</span>
                </div>
            </div>
        </div>
    </div>
}

<style>
    .product-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        overflow: hidden;
    }
    
    .product-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
    }
    
    .product-img {
        height: 200px;
        object-fit: contain;
        padding: 1rem;
        background-color: #ffffff;
    }
    
    .product-title {
        font-size: 0.95rem;
        overflow: hidden;
        text-overflow: ellipsis;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        line-height: 1.3;
        height: 2.6rem;
    }
    
    .product-badges {
        position: absolute;
        top: 10px;
        left: 10px;
    }
    
    .add-to-cart-btn {
        opacity: 0.8;
        transition: opacity 0.3s ease;
    }
    
    .product-card:hover .add-to-cart-btn {
        opacity: 1;
    }
</style> 